pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'logistic.com'
        DOCKER_TAG = 'latest'
        DOCKERHUB_CREDENTIALS = 'u/pdockerhub' // DockerHub credentials ID
        SONARQUBE_CREDENTIALS = 'sonar-tok' // SonarQube credentials ID
        SONARQUBE_URL = 'http://localhost:9000' // Change to localhost or the correct SonarQube URL
    }

    stages {
        stage('Checkout Source Code') {
            steps {
                git branch: 'master', url: 'https://github.com/ssanthosh2k3/logistic.com.git', credentialsId: 'githubup'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Running SonarQube analysis using Docker
                    withCredentials([string(credentialsId: "${SONARQUBE_CREDENTIALS}", variable: 'SONAR_TOKEN')]) {
                        try {
                            sh """
                            docker run --rm \
                              -e SONAR_HOST_URL=${SONARQUBE_URL} \
                              -e SONAR_LOGIN=${SONAR_TOKEN} \
                              -v \$(pwd):/usr/src \
                              sonarsource/sonar-scanner-cli:latest
                            """
                        } catch (Exception e) {
                            currentBuild.result = 'FAILURE'
                            error "SonarQube analysis failed: ${e.getMessage()}"
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh """
                        echo "${DOCKER_PASSWORD}" | docker login -u "${DOCKER_USERNAME}" --password-stdin
                        """
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push Docker image
                    withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh """
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_USERNAME}/${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker push ${DOCKER_USERNAME}/${DOCKER_IMAGE}:${DOCKER_TAG}
                        """
                    }
                }
            }
        }

        stage('Cleanup Docker Local Images') {
            steps {
                script {
                    sh """
                    docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || true
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Docker image successfully built, scanned by SonarQube, and pushed to Docker Hub."
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}
