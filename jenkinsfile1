pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'SonarQube'  // Name of SonarQube configuration in Jenkins
        SONARQUBE_PROJECT_KEY = 'logistic.com'
        SONARQUBE_PROJECT_NAME = 'logistic.com'
        SONARQUBE_TOKEN = credentials('sonar-tok')  // Credentials ID in Jenkins for SonarQube
    }

    stages {
        stage('Checkout Source Code') {
            steps {
                git branch: 'master', url: 'https://github.com/ssanthosh2k3/logistic.com.git', credentialsId: 'githubup'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'sonar-tok', variable: 'SONAR_TOKEN')]) {
                        // Running SonarScanner using Docker container
                        sh """
                        docker run --rm \
                            -e SONAR_TOKEN=${SONAR_TOKEN} \
                            -v \$PWD:/usr/src \
                            sonarsource/sonar-scanner-cli \
                                -Dsonar.projectKey=${SONARQUBE_PROJECT_KEY} \
                                -Dsonar.projectName=${SONARQUBE_PROJECT_NAME} \
                                -Dsonar.login=${SONAR_TOKEN}
                        """
                    }
                }
            }
        }

        // Add more stages here if needed
    }

    post {
        success {
            echo 'SonarQube analysis completed successfully.'
        }
        failure {
            echo 'SonarQube analysis failed.'
        }
    }
}
