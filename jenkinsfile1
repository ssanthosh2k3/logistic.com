pipeline {
    agent any

    environment {
        SONAR_HOST_URL = 'http://216.48.191.104:9000'  // SonarQube server URL
        SONAR_PROJECT_KEY = 'logistic.com'  // SonarQube project key
        SONAR_LOGIN = 'sqp_e4ed49532810ffe926af8e3f1b9357b744560e26'  // SonarQube token
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code
                checkout scm
            }
        }
        
        stage('SonarQube Scan') {
            steps {
                script {
                    // Run sonar-scanner with the necessary arguments
                    sh """
                    sonar-scanner \
                        -Dsonar.projectKey=${env.SONAR_PROJECT_KEY} \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=${env.SONAR_HOST_URL} \
                        -Dsonar.login=${env.SONAR_LOGIN}
                    """
                }
            }
        }
    }
    
    post {
        always {
            // Clean up or post-process after the pipeline runs
            echo "Pipeline finished"
        }
        success {
            echo "SonarQube analysis was successful."
        }
        failure {
            echo "SonarQube analysis failed."
        }
    }
}
