pipeline {
    agent any
    
    environment {
        SONARQUBE_URL = 'http://216.48.191.104:9000'  // URL of the SonarQube server
        SONARQUBE_TOKEN = 'sqp_e4ed49532810ffe926af8e3f1b9357b744560e26'  // SonarQube token for authentication
    }
    
    tools {
        // Use the correct tool type for SonarQube Scanner
        sonarScanner 'SonarQube Scanner'  // Ensure this matches the name of your SonarQube Scanner installation in Jenkins
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm  // Checkout the code from the repository
            }
        }

        stage('SonarQube Scan') {
            steps {
                script {
                    // Run the sonar scanner to analyze the code
                    sh """
                    sonar-scanner \
                    -Dsonar.projectKey=logistic.com \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=${SONARQUBE_URL} \
                    -Dsonar.login=${SONARQUBE_TOKEN}
                    """
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the project...'
                // Add your build steps here (e.g., compiling, dockerizing)
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                // Add your deployment steps here (e.g., deploying to server, container registry)
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline finished successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
